---
import "../styles/global.css";

const categories = ["makers", "code dev", "garden", "science"];
const posts = [
	{ title: "Recent Post #1", date: "2025-09-03", href: "#" },
  	{ title: "Recent Post #2", date: "2025-08-28", href: "#" },
  	{ title: "Recent Post #3", date: "2025-08-12", href: "#" },
];

const repos = [
	{ name: "wild-grove/site", desc: "website & docs", href: "https://github.com/wild-grove/site" },
];

const resources = [
	{ name: "Resource #1", desc: "One-liner about the resource and why it’s useful.", href: "#" },
];

const highlights = [
	{ name: "Audubon Florida", href: "https://www.audubon.org/florida"},
	{ name: "Florida Springs Council", href: "https://www.floridaspringscouncil.org/springs-organizations"},
	{ name: "IDEAS For Us", href: "https://ideasforus.org/mission/"},
	{ name: "UF/IFAS Extension", href: "https://sfyl.ifas.ufl.edu/who-we-are/about-extension/"},
];
---

<html lang="en">
	<head>
		<title>wildgrove</title>
    	<meta name="viewport" content="width=device-width, initial-scale=1" />
  	</head>

  	<body class="min-h-screen bg-gray-950 text-gray-100 antialiased">
    	<!-- Header -->
    	<header class="border-b border-white/20 bg-black/100 backdrop-blur">
      		<div class="container-page py-5 flex items-center justify-center">
        	<a href="/" class="text-2xl font-bold tracking-tight ">
          		<span class="text-5xl text-indigo-700">WILD GROVE</span>
        	</a>
			</div>
    	</header>

		<!-- Categories -->
		<div class="container-page py-4">
        	<!-- Category chips -->
        	<nav class="hidden md:flex gap-2 justify-center flex">
          	{categories.map((c) => <a class="chip" href="#">{c}</a>)}
        	</nav>

      		<!-- Mobile chips row -->
      		<div class="md:hidden container-page pb-4 flex flex-wrap gap-2 justfiy-center">
        	{categories.map((c) => <a class="chip" href="#">{c}</a>)}
      		</div>
		</div>

    	<main class="container-page py-10 space-y-10">
      	<!-- Recent posts -->
      	<section class="space-y-5">
        	<h2 class="section-title">Recent Posts</h2>
        	<ul class="space-y-4">
          		{posts.map((p) => (
            	<li class="card">
              		<a href={p.href} class="block group">
                		<div class="flex items-start justify-between gap-6">
                  			<h3 class="text-xl font-semibold group-hover:text-purple-300 transition">
                    		{p.title}
                  			</h3>
                  			<time class="muted whitespace-nowrap">{p.date}</time>
                		</div>
                		<p class="muted mt-2">
                  		One-sentence teaser goes here. Keep it around 120–160 chars.
                		</p>
              		</a>
            	</li>
          		))}
        	</ul>

        	<div class="text-right">
          	<a href="/posts" class="link-arrow">See more → All posts</a>
        	</div>
      	</section>

      	<!-- Repos & Resources -->
      	<section class="grid grid-cols-1 md:grid-cols-2 gap-6">
        	<!-- Repos -->
        	<div class="space-y-4">
          		<h2 class="section-title">Repos</h2>
          		<ul class="space-y-3">
            		{repos.map((r) => (
              			<li class="card">
                		<a href={r.href} class="block">
                  		<h3 class="font-semibold">{r.name}</h3>
                  		<p class="muted mt-1">{r.desc}</p>
                		</a>
              			</li>
           			))}
          		</ul>
        	</div>

        	<!-- Resources -->
        	<div class="space-y-4">
          		<h2 class="section-title">Resources</h2>
          		<ul class="space-y-3">
            		{resources.map((r) => (
              			<li class="card">
                		<a href={r.href} class="block">
                  		<h3 class="font-semibold">{r.name}</h3>
                  		<p class="muted mt-1">{r.desc}</p>
                		</a>
              			</li>
            		))}
          		</ul>
        	</div>
    	</section>

		<!-- Highlights -->
		<section class="grid grid-cols-1 md:grid-cols-1 gap-6"> 
			<div class="space-y-4"> 
				<h2 class="section-title">Highlights</h2>
				<ul class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
  					{highlights.map((h) => (
    					<li>
      					<a href={h.href} class="block rounded-xl border border-white/10 bg-white/5 p-6
               				shadow-md shadow-black/20
               				transition transform hover:-translate-y-1 hover:shadow-lg
               				hover:bg-white/10 focus:outline-none focus:ring-2 focus:ring-purple-400">
						<h3 class="text-lg font-semibold text-purple-300 group-hover:text-purple-200">
          					{h.name}
        				</h3>
        				<p class="mt-2 text-sm text-white/70">
          					Short description or tagline for the link.
        				</p>
						</a>
    					</li>
  					))}
				</ul>
			</div>
		</section>
    </main>

    <footer class="container-page py-10 text-center muted">
		&copy; {new Date().getFullYear()} Wild Grove
    </footer>
  </body>
</html>
