---
import "../styles/global.css";

const categories = ["maker", "code dev", "garden", "research"];
const posts = [
	{ title: "Recent Post #1", date: "2025-09-03", href: "#" },
];

const repos = [
	{ img: "github.svg", name: "wild-grove/site", desc: "website & docs", href: "https://github.com/wild-grove/site" },
	{ img: "github.svg", name: "wkhenon/runny", desc: "NPK sensor suite for soil and water", href: "https://github.com/wkhenon/runny" },
];

const resources = [
	{ img: "file-icon.svg", name: "Resource #1", desc: "One-liner about the resource and why its useful.", href: "#" },
];

const highlights = [
	{ name: "Audubon Florida", href: "https://www.audubon.org/florida"},
	{ name: "Florida Springs Council", href: "https://www.floridaspringscouncil.org/springs-organizations"},
	{ name: "IDEAS For Us", href: "https://ideasforus.org/mission/"},
	{ name: "UF/IFAS Extension", href: "https://sfyl.ifas.ufl.edu/who-we-are/about-extension/"},
];
---

<html lang="en">
	<head>
		<title>wildgrove</title>
    	<meta name="viewport" content="width=device-width, initial-scale=1" />
  	</head>

  	<body class="min-h-screen bg-neutral-950 text-gray-100 antialiased">
    	<!-- Header -->
    	<header class="border-b border-white/20 bg-black/100 backdrop-blur">
      		<div class="container-page py-5 flex items-center justify-center">
        	<a href="/" class="text-2xl font-bold tracking-tight">
				<span class="text-indigo-700 text-6xl header-font">WILD GROVE</span>
        	</a>
			</div>
    	</header>

		<!-- Categories -->
		<div class="container-page py-4">
        	<!-- Category chips -->
        	<nav class="hidden md:flex gap-2 justify-center flex">
          	{categories.map((c) => <a class="chip" href="#">{c}</a>)}
        	</nav>

      		<!-- Mobile chips row -->
      		<div class="md:hidden container-page pb-4 flex flex-wrap gap-2 justfiy-center">
        	{categories.map((c) => <a class="chip" href="#">{c}</a>)}
      		</div>
		</div>

    	<main class="container-page py-10 space-y-10">
      	<!-- Recent posts -->
      	<section class="space-y-5">
        	<h2 class="section-title label-font">Recent Posts</h2>
        	<ul class="space-y-4">
          		{posts.map((p) => (
            	<li class="card">
              		<a href={p.href} class="block group">
                		<div class="flex items-start justify-between gap-6">
                  			<h3 class="text-xl font-semibold group-hover:text-purple-500 transition">
                    		{p.title}
                  			</h3>
                  			<time class="muted whitespace-nowrap">{p.date}</time>
                		</div>
                		<p class="muted mt-2">
                  		One-sentence teaser goes here.
                		</p>
              		</a>
            	</li>
          		))}
        	</ul>

        	<div class="text-right">
          	<a href="/posts" class="link-arrow label-font">See all posts</a>
        	</div>
      	</section>

      	<!-- Repos & Resources -->
      	<section class="grid grid-cols-1 md:grid-cols-2 gap-6">
        	<!-- Repos -->
        	<div class="space-y-4">
          		<h2 class="section-title label-font">Repos</h2>
          		<ul class="space-y-3">
            		{repos.map((r) => (
              			<li class="card p-0">
                		<a href={r.href} class="flex items-stretch gap-4 p-5 sm:p-6 group">
							<!-- icon box -->
							<div class="shrink-0 w-10 h-10 sm:w-10 sm:h-10 rounded-xl bg-white/10 border border-white/10
                				flex items-center justify-center">
      							<img src={`/icons/${r.img}`} alt="" class="w-7 h-7 sm:w-8 sm:h-8 invert" loading="lazy"/>
    						</div>
							<div class="min-w-0">
								<h3 class="font-semibold text-white group-hover:text-purple-500 transition">{r.name}</h3>
                  				<p class="muted mt-1 line-clamp-2">{r.desc}</p>
							</div>
                		</a>
              			</li>
           			))}
          		</ul>
        	</div>

        	<!-- Resources -->
        	<div class="space-y-4">
          		<h2 class="section-title label-font">Resources</h2>
          		<ul class="space-y-3">
            		{resources.map((r) => (
              			<li class="card p-0">
                		<a href={r.href} class="flex items-stretch gap-4 p-5 sm:p-6 group">
							<!-- icon box -->
							<div class="shrink-0 w-10 h-10 sm:w-10 sm:h-10 rounded-xl bg-white/10 border border-white/10
                				flex items-center justify-center">
								<img src={`/icons/${r.img}`} alt="" class="w-7 h-7 sm:w-8 sm:h-8 invert" loading="lazy"/>
							</div>
							<div class="min-w-0">
								<h3 class="font-semibold text-white group-hover:text-purple-500 transition">{r.name}</h3>
                  				<p class="muted mt-1">{r.desc}</p>
							</div>
                		</a>
              			</li>
            		))}
          		</ul>
        	</div>
    	</section>

		<!-- Highlights -->
		<section class="grid grid-cols-1 md:grid-cols-1 gap-6"> 
			<div class="space-y-4"> 
				<h2 class="section-title label-font">Highlights</h2>
				<ul class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
  					{highlights.map((h) => (
    					<li>
      					<a href={h.href} class="block rounded-xl border border-white/10 bg-white/5 p-6
               				shadow-md shadow-black/20
               				transition transform hover:-translate-y-1 hover:shadow-lg
               				hover:bg-white/10 focus:outline-none focus:ring-2 focus:ring-purple-400">
						<h3 class="text-lg font-semibold text-purple-300 group-hover:text-purple-500">
          					{h.name}
        				</h3>
						</a>
    					</li>
  					))}
				</ul>
			</div>
		</section>
    </main>

    <footer class="container-page py-10 text-center muted">
		&copy; {new Date().getFullYear()} Wild Grove
    </footer>
  </body>
</html>
